<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp">
    

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/igv_foto"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="fsdfsd"
            app:layout_constraintStart_toEndOf="@id/igv_foto"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:text="precio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="parent" />

        <TextView
            android:id="@+id/txv_profesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descrip"
            app:layout_constraintLeft_toRightOf="@id/igv_foto"
            app:layout_constraintTop_toBottomOf="@id/txv_nombre"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

